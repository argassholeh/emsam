<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.EMSAM" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/colorPrimaryy</item>
        <item name="colorPrimaryVariant">@color/colorPrimaryDarkk</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/colorPrimaryDarkk</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="ButtonSuccess" parent="Theme.AppCompat.Light">
        <item name="colorControlHighlight">#03AA47</item>
        <item name="colorButtonNormal">#26E474</item>
    </style>

    <style name="ButtonDanger" parent="Theme.AppCompat.Light">
        <item name="colorControlHighlight">#BE0404</item>
        <item name="colorButtonNormal">#DD1B1B</item>
    </style>
    <style name="Theme.App.Base" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorControlNormal">@color/line_gray</item>
        <item name="colorControlActivated">#e4e4e4</item>
        <item name="colorControlHighlight">@color/line_gray</item>
    </style>
</resources>